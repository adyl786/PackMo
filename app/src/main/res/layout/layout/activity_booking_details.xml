<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/_7sdp"
    tools:context=".Booking_details">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_10sdp"
        android:paddingRight="@dimen/_10sdp">


        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/dateID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sample date"
                    android:textSize="@dimen/_18sdp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Time"
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/timeID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample time"
                    android:textSize="@dimen/_18sdp" />
            </TableRow>

            <TableRow>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity           "
                    android:textSize="@dimen/_18sdp" />

                <TextView
                    android:id="@+id/capacityID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="sample capacity"
                    android:textSize="@dimen/_18sdp" />
            </TableRow>
        </TableLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_1sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="#817A6F6F">

        </View>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Custom.TextInputLayout">

            <EditText
                android:id="@+id/nameID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:textSize="@dimen/_15sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Custom.TextInputLayout">

            <EditText
                android:id="@+id/phoneNoID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number"
                android:inputType="phone"
                android:maxLength="10"
                android:textSize="@dimen/_15sdp" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Custom.TextInputLayout">

            <EditText
                android:id="@+id/addressID"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:gravity="top"
                android:hint="Address(Area and Street)"
                android:inputType="textPostalAddress|textMultiLine"
                android:textSize="@dimen/_15sdp" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/Custom.TextInputLayout">


            <EditText
                android:id="@+id/landmarkID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Landmark(Optionl)"
                android:textSize="@dimen/_15sdp" />


        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/confirmBookBTN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm booking" />

    </LinearLayout>
</ScrollView>